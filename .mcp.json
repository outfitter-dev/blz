{
  "mcpServers": {
    "linear": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-linear@latest"],
      "env": {
        "LINEAR_API_KEY": ""
      }
    },
    "blz-docs": {
      "command": "blz",
      "args": ["mcp-server"],
      "env": {
        "BLZ_MCP_SOURCES": "rust,typescript,react,node,python",
        "BLZ_MCP_MAX_RESULTS": "50"
      }
    }
  }
}