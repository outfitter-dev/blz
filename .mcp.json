{
  "mcpServers": {
    "linear": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "github:obra/streamlinear"]
    },
    "superlinear": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "github:obra/streamlinear"]
    },
    "blz": {
      "type": "stdio",
      "command": "blz",
      "args": ["mcp-server"],
      "env": {
        "RUST_LOG": "blz_mcp=debug,blz_core=info"
      }
    }
  }
}
